" Windows plays by its own rules
if has('win32')
    set rtp+=~/vimfiles/bundle/Vundle.vim
    let path=expand('~/vimfiles/bundle')
    call vundle#begin(path)
else
    set rtp+=~/.vim/bundle/Vundle.vim
    call vundle#begin()
endif

